<% layout('/layout/boilerplate') -%>
<body>
  <h3 class="mt-3">Wanderlust listings</h3>
  <div class="card-box row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <%for(let data of listing){%>
      <a href="/listings/<%=data._id%>" class="listing-link">
        <div class="card col">
          <img src="<%=data.image.url%>" class="card-img-top" alt="..." style="height: 20rem; width: 100%;">
          <div class="card-body">
            <b><p class="card-title"><%=data.title%></p></b>
            <p class="card-text">&#8377; <%=data.price.toLocaleString("en-IN")%></p>
          </div>
        </div>
      </a>
    <%}%>
  </div>
</body>
